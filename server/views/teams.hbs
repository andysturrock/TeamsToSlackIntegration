<h1>Teams</h1>
<table class="table">
  <thead>
    <tr>
      <th scope="col">Team Name</th>
      <th scope="col">ID</th>
      <th scope="col">Channels</th>
    </tr>
  </thead>
  <tbody>
    {{#each teamsAndChannels as |team|}}
    <tr>
      <td>{{team.displayName}}</td>
      <td>{{team.id}}</td>
      <td>
        <table class="table">
          <thead>
            <tr>
              <th scope="col">Channel Name</th>
              <th scope="col">ID</th>
            </tr>
          </thead>
          <tbody>
            {{#each team.channels}}
            <tr>
              <td>
                <a href="/messages/{{team.id}}/{{this.id}}">{{this.displayName}}</a>
              </td>
              <td>{{this.id}}</td>
            </tr>
            {{/each}}
          </tbody>
        </table>
      </td>
    </tr>
    {{/each}}
  </tbody>
</table>